h1, h2, h3, h4, h5, h6 { @apply font-sans font-thin mb-3; }

h1 { @apply text-5xl; }
h2 { @apply text-4xl; }
h3 { @apply text-3xl; }
h4 { @apply text-2xl; }
h6 { @apply text-lg; }
h5 { @apply text-xl; }

p { @apply text-gray-800 dark:text-gray-200 mb-3; }

a { @apply font-bold text-current opacity-80 hover:opacity-100 focus:opacity-100 transition duration-150 ease-in-out; }

pre, code { @apply font-mono font-normal; }

pre { @apply mb-3; }